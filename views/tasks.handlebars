{{!-- tasks page showing tasks associated with the right goal --}}

<div class="header">
  <a href="dashboard.handlebars">
    <img id="logo" src="/images/logo.png" alt="logo">
  </a>
  <h1>ACCOUNTABILIBUDDY</h1>

<div class="container">


  {{!-- specific goal --}}


  <div class="row">

    <div class="add-task">
      <p class="leading">Add a Task</p>
      <form action="/api/tasks" method="POST">
        <textarea type="text" name="description" id="textInput"></textarea>
        <button type="submit" class="signBtn">Add Task!</button>
      </form>
    </div>

  </div>

  <div class="row">

    <div id="specificTasks" class="myProgress">
      <br>
      <p class="leading">Tasks</p>
      <br>
      <ul>
        {{#each tasks}}
        <li>
          <p id="tasking">{{description}}</p>
        </li>
        {{/each}}
      </ul>
    </div>

  </div>
  
</div>

